# SQLFluff configuration for OSM-Notes-Analytics
# Author: Andres Gomez (AngocA)
# Version: 2025-01-27
# Compatible with SQLFluff 1.4.5

[sqlfluff]
dialect = postgres
max_line_length = 100
exclude_rules = PRS,L031,L011,L034,L051,L014,L003,L036,L030,L052,L016,L061,L013,L029

[sqlfluff:indentation]
indent_unit = space
tab_space_size = 2
indented_joins = true
indented_using_on = true
