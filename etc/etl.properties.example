# ETL Configuration Properties - EXAMPLE FILE
# Copy this file to etl.properties for your local configuration:
#   cp etc/etl.properties.example etc/etl.properties
# Then edit etc/etl.properties with your specific settings if needed.
#
# Author: Andres Gomez (AngocA)
# Version: 2025-08-18

# Performance Configuration
ETL_BATCH_SIZE=1000
ETL_COMMIT_INTERVAL=100
ETL_VACUUM_AFTER_LOAD=true
ETL_ANALYZE_AFTER_LOAD=true
# ANALYZE foreign tables during FDW setup (default: false for performance)
# Setting to true will analyze foreign tables which can take 20+ seconds
# but improves query planning. Only enable if you experience query performance issues.
# OPTIMIZATION: Enable ANALYZE on FDW tables for better query planning
# When enabled, PostgreSQL will request statistics from the remote server
# This improves query performance, especially for date range queries
# Default: false (for faster ETL startup, but may cause slower queries)
# Recommended: true (for better query performance on FDW tables)
ETL_ANALYZE_FDW_TABLES=true

# Resource Control
MAX_MEMORY_USAGE=80
MAX_DISK_USAGE=90
ETL_TIMEOUT=7200

# Recovery Configuration
ETL_RECOVERY_ENABLED=true

# Data Integrity Validation
ETL_VALIDATE_INTEGRITY=true
ETL_VALIDATE_DIMENSIONS=true
ETL_VALIDATE_FACTS=true

# Notification Configuration
ETL_NOTIFICATION_ENABLED=false
ETL_NOTIFICATION_EMAIL=""

# Parallel Processing
ETL_PARALLEL_ENABLED=true
ETL_MAX_PARALLEL_JOBS=4

# Test Mode Configuration
# If enabled, processes only years 2013-2014 for faster testing
# This maintains data integrity by processing complete years
# After test mode, use incremental mode to process remaining years (2015+)
# Set to false for production (processes all years from 2013 to current)
ETL_TEST_MODE=false

# Logging Configuration
ETL_LOG_LEVEL="INFO"
ETL_AUDIT_ENABLED=true

# Database Configuration
ETL_DB_TIMEOUT=300
ETL_DB_RETRY_ATTEMPTS=3

# Monitoring Configuration
ETL_MONITOR_RESOURCES=true
ETL_MONITOR_INTERVAL=30

# Cleanup Configuration
CLEAN=true

# Large File Processing Configuration
ETL_LARGE_FILE_THRESHOLD_MB=500
ETL_VERY_LARGE_FILE_THRESHOLD_MB=1000
ETL_XML_VALIDATION_TIMEOUT=300
ETL_XML_BATCH_SIZE=1000
ETL_XML_MAX_BATCHES=10
ETL_XML_SAMPLE_SIZE=50
ETL_XML_MEMORY_LIMIT_MB=2048

# XSLT Processing Configuration
ETL_XSLT_MAX_DEPTH=4000

