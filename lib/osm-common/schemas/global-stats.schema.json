{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://osmlatam.org/schemas/global-stats.schema.json",
  "title": "Global OSM Notes Statistics",
  "description": "Worldwide aggregated statistics for OSM notes",
  "type": "object",
  "required": [
    "dimension_global_id"
  ],
  "properties": {
    "dimension_global_id": {
      "type": "integer",
      "description": "Always 1, single record identifier"
    },
    "date_starting_creating_notes": {
      "type": ["string", "null"],
      "format": "date",
      "description": "Date of the oldest opened note globally"
    },
    "date_starting_solving_notes": {
      "type": ["string", "null"],
      "format": "date",
      "description": "Date of the oldest closed note globally"
    },
    "first_open_note_id": {
      "type": ["integer", "null"],
      "description": "First opened note ID globally"
    },
    "first_closed_note_id": {
      "type": ["integer", "null"],
      "description": "First closed note ID globally"
    },
    "first_reopened_note_id": {
      "type": ["integer", "null"],
      "description": "First reopened note ID globally"
    },
    "last_year_activity": {
      "type": ["string", "null"],
      "description": "Last year's actions in GitHub tile style"
    },
    "latest_open_note_id": {
      "type": ["integer", "null"],
      "description": "Most recent opened note ID"
    },
    "latest_closed_note_id": {
      "type": ["integer", "null"],
      "description": "Most recent closed note ID"
    },
    "latest_reopened_note_id": {
      "type": ["integer", "null"],
      "description": "Most recent reopened note ID"
    },
    "history_whole_open": {
      "type": ["integer", "null"],
      "minimum": 0,
      "description": "Total opened notes in history"
    },
    "history_whole_commented": {
      "type": ["integer", "null"],
      "minimum": 0,
      "description": "Total commented notes in history"
    },
    "history_whole_closed": {
      "type": ["integer", "null"],
      "minimum": 0,
      "description": "Total closed notes in history"
    },
    "history_whole_closed_with_comment": {
      "type": ["integer", "null"],
      "minimum": 0,
      "description": "Total closed notes with comments in history"
    },
    "history_whole_reopened": {
      "type": ["integer", "null"],
      "minimum": 0,
      "description": "Total reopened notes in history"
    },
    "history_year_open": {
      "type": ["integer", "null"],
      "minimum": 0,
      "description": "Notes opened in current year"
    },
    "history_year_commented": {
      "type": ["integer", "null"],
      "minimum": 0,
      "description": "Notes commented in current year"
    },
    "history_year_closed": {
      "type": ["integer", "null"],
      "minimum": 0,
      "description": "Notes closed in current year"
    },
    "history_year_closed_with_comment": {
      "type": ["integer", "null"],
      "minimum": 0,
      "description": "Notes closed with comment in current year"
    },
    "history_year_reopened": {
      "type": ["integer", "null"],
      "minimum": 0,
      "description": "Notes reopened in current year"
    },
    "currently_open_count": {
      "type": ["integer", "null"],
      "minimum": 0,
      "description": "Number of notes currently open"
    },
    "currently_closed_count": {
      "type": ["integer", "null"],
      "minimum": 0,
      "description": "Number of notes currently closed"
    },
    "notes_created_last_30_days": {
      "type": ["integer", "null"],
      "minimum": 0,
      "description": "Notes created in last 30 days"
    },
    "notes_resolved_last_30_days": {
      "type": ["integer", "null"],
      "minimum": 0,
      "description": "Notes resolved in last 30 days"
    },
    "notes_backlog_size": {
      "type": ["integer", "null"],
      "minimum": 0,
      "description": "Number of open notes older than 7 days"
    },
    "avg_days_to_resolution": {
      "type": ["number", "null"],
      "minimum": 0,
      "description": "Average days to resolve notes (all time)"
    },
    "median_days_to_resolution": {
      "type": ["number", "null"],
      "minimum": 0,
      "description": "Median days to resolve notes (all time)"
    },
    "avg_days_to_resolution_current_year": {
      "type": ["number", "null"],
      "minimum": 0,
      "description": "Average days to resolve notes created this year"
    },
    "median_days_to_resolution_current_year": {
      "type": ["number", "null"],
      "minimum": 0,
      "description": "Median days to resolve notes created this year"
    },
    "notes_resolved_count": {
      "type": ["integer", "null"],
      "minimum": 0,
      "description": "Total number of notes resolved"
    },
    "resolution_rate": {
      "type": ["number", "null"],
      "minimum": 0,
      "maximum": 100,
      "description": "Percentage of notes resolved"
    },
    "active_users_count": {
      "type": ["integer", "null"],
      "minimum": 0,
      "description": "Users active in last 30 days"
    },
    "notes_age_distribution": {
      "type": ["object", "null"],
      "description": "Distribution of note ages",
      "properties": {
        "0-7_days": {
          "type": ["integer", "null"],
          "minimum": 0
        },
        "8-30_days": {
          "type": ["integer", "null"],
          "minimum": 0
        },
        "31-90_days": {
          "type": ["integer", "null"],
          "minimum": 0
        },
        "90_plus_days": {
          "type": ["integer", "null"],
          "minimum": 0
        }
      }
    },
    "top_countries": {
      "type": ["array", "null"],
      "description": "Top countries by activity",
      "items": {
        "type": "object",
        "properties": {
          "country_id": {
            "type": "integer"
          },
          "country_name": {
            "type": "string"
          },
          "total_actions": {
            "type": "integer",
            "minimum": 0
          }
        }
      }
    },
    "applications_used": {
      "type": ["array", "null"],
      "description": "Most used applications",
      "items": {
        "type": "object",
        "properties": {
          "application_id": {
            "type": "integer"
          },
          "application_name": {
            "type": "string"
          },
          "usage_count": {
            "type": "integer",
            "minimum": 0
          }
        }
      }
    },
    "most_used_application_id": {
      "type": ["integer", "null"],
      "description": "ID of the most used application"
    },
    "mobile_apps_count": {
      "type": ["integer", "null"],
      "minimum": 0,
      "description": "Number of mobile applications used"
    },
    "desktop_apps_count": {
      "type": ["integer", "null"],
      "minimum": 0,
      "description": "Number of desktop/web applications used"
    },
    "avg_comment_length": {
      "type": ["number", "null"],
      "minimum": 0,
      "description": "Average length of comments in characters"
    },
    "comments_with_url_pct": {
      "type": ["number", "null"],
      "minimum": 0,
      "maximum": 100,
      "description": "Percentage of comments containing URLs"
    },
    "comments_with_mention_pct": {
      "type": ["number", "null"],
      "minimum": 0,
      "maximum": 100,
      "description": "Percentage of comments containing mentions"
    },
    "avg_comments_per_note": {
      "type": ["number", "null"],
      "minimum": 0,
      "description": "Average number of comments per note"
    }
  },
  "additionalProperties": false
}


